# Example local properties (no secrets)
# Copy this to src/main/resources/application-local.properties and fill secrets locally.

# Hikari pool - keep very small for shared dev DBs
spring.datasource.hikari.maximum-pool-size=1
spring.datasource.hikari.minimum-idle=0
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=60000
spring.datasource.hikari.max-lifetime=120000

# Disable DevTools restart to avoid extra connections
spring.devtools.restart.enabled=false

# DO NOT COMMIT REAL SECRETS - override this locally via environment variable
spring.datasource.password=${SUPABASE_DB_PASSWORD}

# Avoid schema generation in local dev against shared DB
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=false

# Optional: identify your app in pg_stat_activity
spring.datasource.hikari.data-source-properties.applicationName=iocbackend-local

